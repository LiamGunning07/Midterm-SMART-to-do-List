<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Karantina:wght@300;400;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css"/>
  <link rel="stylesheet" href="/styles/tables.css"/>
  <link rel="stylesheet" href="/styles/items.css"/>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <span id="site_title">SMART TO-DO LIST</span>
    <span id="logged_in">Logged in as User</span>
    <i class="fa-solid fa-face-smile"></i>  </header>
  <container>
    <main>
      <container>
        <span>New Task:</span>
        <form id="submitForm">
          <input type="text" placeholder="Add something to-do!" id="form1" name="userInput">
          <button type="submit" form="submitForm" value="Submit" id="submitButton">Add</button>
        </form>

      </container>
    </main>
    <div class="tables">
      <div class="table">
        <container class="table-head">
          <div>To Watch</div>
          <div class="dropdown" id="to-watch-bttn">
            <button class="dropbtn">
              <i class="fa-solid fa-caret-down"></i>
            </button>
          </div>
        </container>
        <div class="dropdown-content" id="to-watch-drop">
          <container id="test-dropdown"></container>
        </div>

      </div>
      <div class="table">
        <container class="table-head">
          <div>To Buy</div>
          <div class="dropdown">
            <button class="dropbtn" id="to-buy-bttn">
              <i class="fa-solid fa-caret-down"></i>
            </button>
          </div>
        </container>
        <div class="dropdown-content" id="to-buy-drop">
          <container id="test-dropdown"></container>
        </div>

      </div>
      <div class="table">
        <container class="table-head">
          <div>To Read</div>
          <div class="dropdown">
            <button class="dropbtn" id="to-read-bttn">
              <i class="fa-solid fa-caret-down"></i>
            </button>
          </div>
        </container>
        <div class="dropdown-content" id="to-read-drop">
          <container id="test-dropdown"></container>
        </div>

      </div>
      <div class="table">
        <container class="table-head">
          <div>To Eat</div>
          <div class="dropdown">
            <button class="dropbtn" id="to-eat-bttn">
              <i class="fa-solid fa-caret-down"></i>
            </button>
          </div>
        </container>
        <div class="dropdown-content" id="to-eat-drop">
          <container id="test-dropdown"></container>
        </div>

      </div>
      <div class="table">
        <container class="table-head">
          <div>Miscellaneous</div>
          <div class="dropdown">
            <button class="dropbtn" id="misc-bttn">
              <i class="fa-solid fa-caret-down"></i>
            </button>
          </div>
        </container>
        <div class="dropdown-content" id="misc-drop">
          <container id="test-dropdown"></container>
        </div>

      </div>
    </div>
  </container>

</body>

</html>
